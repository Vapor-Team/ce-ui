@import '../../common/var'

[class*={$icon}-], [class^={$icon}-]
  font-family $icon + '-font' !important
  font-style normal
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

@b icon
  display inline-block
  line-height 1

  @e symbol
    position relative
    width 1em
    height 1em
    vertical-align -0.15em
    fill currentColor
    overflow hidden
    -webkit-transform scale(1)
    transform scale(1)
